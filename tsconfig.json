{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "example",
    "tests",
    "coverage",
    "**/__tests__/**/*",
    "dist/**/*"
  ],
  "compileOnSave": true
}