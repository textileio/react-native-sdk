{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/__tests__/**/*",
    "coverage",
    "dist/**/*",
    "example",
    "node_modules",
    "tests"
  ],
  "compileOnSave": true,
  "typedocOptions": {
    "theme": "minimal",
    "mode": "file",
    "out": "docs",
    "include": "src/",
    "exclude": "**/__tests__/**/*,src/Textile/store.ts,src/index.ts,src/Textile/helpers.ts,src/Textile/migration.ts,src/Textile/internalEvents.ts,src/NativeEvents/**/*,src/Textile/Models/**/*",
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeProtected": true,
    "readme": "./config/DOCS_TEMPLATE.md",
    "hideGenerator": true,
    "target": "ES6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "module": "commonjs",
    "mdHideSources": true,
    "mdSourceRepo": "http://github.com/textileio/react-native-sdk"
  }
}