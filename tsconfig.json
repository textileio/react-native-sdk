{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "commonjs",
    "jsx": "react-native",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "example",
    "tests",
    "coverage",
    "**/__tests__/**/*",
    "dist/**/*"
  ],
  "compileOnSave": true,
  "typedocOptions": {
    "mode": "file",
    "out": "docs",
    "include": "lib/",
    "theme": "markdown",
    "exclude": "**/__tests__/**/*,lib/Textile/store.ts,lib/index.ts,lib/Textile/helpers.ts,lib/Textile/migration.ts,lib/Textile/internalEvents.ts,lib/NativeEvents/**/*,lib/Textile/Models/**/*",
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeProtected": true,
    "readme": "./config/DOCS_TEMPLATE.md",
    "hideGenerator": true,
    "target": "ES6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "module": "commonjs",
    "mdHideSources": true,
    "mdSourceRepo": "http://github.com/textileio/react-native-sdk"
  }
}